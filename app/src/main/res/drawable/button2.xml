<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#D9DADC"
                android:endColor="#D9DADC"
                android:angle="90"
                />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="20dp" />
            <padding android:bottom="@dimen/_5sdp" android:left="@dimen/_5sdp" android:right="@dimen/_5sdp" android:top="@dimen/_5sdp"/>
        </shape>
        <item android:right="5dp" android:top="5dp">
            <shape>
                <corners android:radius="1dp" />
                <solid android:color="#D9DADC" />
            </shape>
        </item>
    </item>


</selector>